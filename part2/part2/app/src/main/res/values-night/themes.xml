<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Part2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary (Charcoal for depth and contrast) -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/slate</item>
        <item name="colorOnPrimary">@color/cool_gray</item>

        <!-- Secondary (Sapphire for cool elegance) -->
        <item name="colorSecondary">@color/emerald</item>
        <item name="colorSecondaryVariant">@color/blue_gray</item>
        <item name="colorOnSecondary">@color/ivory</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Surface colors (dark slate background, light text) -->
        <item name="colorSurface">@color/navy</item>
        <item name="colorOnSurface">@color/ivory</item>

        <!-- Background (overall night background) -->
        <item name="android:windowBackground">@drawable/background_n</item>

        <!-- CardView default background (cool taupe) -->
        <item name="cardViewStyle">@style/CardView.Dark</item>
    </style>

    <style name="CardView.Dark" parent="CardView">
        <item name="cardBackgroundColor">@color/emerald</item> <!-- Cool, muted base -->
    </style>
</resources>
